{
  "name": "Tempo SLA",
  "description": "Show notification on tempo SLA",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://app.alp-pulse.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tempo SLA Event",
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "tempo-logo32.png"
  }
}