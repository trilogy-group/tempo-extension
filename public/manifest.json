{
  "manifest_version": 3,
  "name": "Tempo Extension",
  "version": "0.1.0",
  "description": "Show notification on tempo SLA",
  "icons": {
    "32": "icons/icon_32.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tempo Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.alp-pulse.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
